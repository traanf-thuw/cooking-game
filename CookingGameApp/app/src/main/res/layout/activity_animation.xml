<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/startPageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anime_background">

    <!-- Food Images and Center Character -->

    <TextView
        android:id="@+id/titleText"
        android:layout_width="349dp"
        android:layout_height="76dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/baloo_regular"
        android:text="@string/animation_heading"
        android:textColor="#40a829"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fatBaby"
        android:layout_width="193dp"
        android:layout_height="145dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/kirby"
        android:src="@drawable/fat_baby"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <ImageView
        android:id="@+id/long_pan"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="83dp"
        android:layout_marginBottom="120dp"
        android:src="@drawable/long_pan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fatBaby" />

    <ImageView
        android:id="@+id/fried_egg"
        android:layout_width="55dp"
        android:layout_height="58dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/fried_egg"
        app:layout_constraintBottom_toBottomOf="@+id/long_pan"
        app:layout_constraintStart_toStartOf="@+id/long_pan" />

    <ImageView
        android:id="@+id/imageBreakfast"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="72dp"
        android:src="@drawable/breakfast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.901"
        app:layout_constraintStart_toEndOf="@+id/fatBaby" />

    <ImageView
        android:id="@+id/imageDinner"
        android:layout_width="106dp"
        android:layout_height="104dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/dinner"
        app:layout_constraintEnd_toStartOf="@+id/friedRice"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/friedRice"
        android:layout_width="103dp"
        android:layout_height="95dp"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="72dp"
        android:src="@drawable/fried_rice"
        app:layout_constraintBottom_toTopOf="@+id/green_baby"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageDish"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="64dp"
        android:src="@drawable/dish"
        app:layout_constraintBottom_toTopOf="@+id/imageBreakfast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/fatBaby"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageSalad"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/salad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDinner" />

    <ImageView
        android:id="@+id/green_baby"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="272dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/green_baby"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/puddingBay"
        android:layout_width="100dp"
        android:layout_height="82dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/pudding_baby"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
