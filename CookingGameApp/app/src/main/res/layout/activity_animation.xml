<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/startPageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/animation_background"
    tools:context=".StartingActivity">

    <!-- Food Images and Center Character -->

    <TextView
        android:id="@+id/titleText"
        android:layout_width="258dp"
        android:layout_height="73dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/baloo_regular"
        android:text="Let Me Cook"
        android:textColor="#4DA034"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fatBaby"
        android:layout_width="193dp"
        android:layout_height="145dp"
        android:layout_marginTop="12dp"
        android:contentDescription="Kirby"
        android:src="@drawable/fat_baby"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <ImageView
        android:id="@+id/fried_egg"
        android:layout_width="55dp"
        android:layout_height="58dp"
        android:layout_marginStart="468dp"
        android:layout_marginBottom="120dp"
        android:src="@drawable/fried_egg"
        app:layout_constraintBottom_toBottomOf="@id/long_pan"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/long_pan"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginStart="392dp"
        android:layout_marginBottom="164dp"
        android:src="@drawable/long_pan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageBreakfast"
        android:layout_width="115dp"
        android:layout_height="125dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="48dp"
        android:src="@drawable/breakfast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/fatBaby" />

    <ImageView
        android:id="@+id/imageDinner"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/dinner"
        app:layout_constraintEnd_toStartOf="@+id/friedRice"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/friedRice"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="72dp"
        android:src="@drawable/fried_rice"
        app:layout_constraintBottom_toTopOf="@+id/green_baby"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageDish"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="64dp"
        android:src="@drawable/dish"
        app:layout_constraintBottom_toTopOf="@+id/imageBreakfast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/fatBaby"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageSalad"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="128dp"
        android:src="@drawable/salad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageDinner" />

    <ImageView
        android:id="@+id/green_baby"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="292dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/green_baby"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/puddingBay"
        android:layout_width="100dp"
        android:layout_height="82dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/pudding_baby"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
