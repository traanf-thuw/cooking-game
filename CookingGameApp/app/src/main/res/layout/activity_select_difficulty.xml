<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectDifficultyActivity">

    <!-- Fullscreen Background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/menubackground"
        android:scaleType="centerCrop"
        android:contentDescription="@null" />

    <!-- Centered Difficulty Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:weightSum="3">

        <!-- Easy Button -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/easyButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/easy"
                android:scaleType="fitCenter"
                android:background="@null"
                android:contentDescription="Easy" />
        </FrameLayout>

        <!-- Medium Button -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/mediumButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/medium"
                android:scaleType="fitCenter"
                android:background="@null"
                android:contentDescription="Medium" />
        </FrameLayout>

        <!-- Hard Button -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/hardButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/hard"
                android:scaleType="fitCenter"
                android:background="@null"
                android:contentDescription="Hard" />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>